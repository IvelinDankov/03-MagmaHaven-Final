<section id="create-container">
    <div class="create-container-info">
        <h1>Create Volcano Wiki</h1>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="..." value="{{volcano.name}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{volcano.location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" placeholder="..." {{volcano.elevation}}>
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastEruption" placeholder="..." value="{{volcano.lastEruption}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{volcano.image}}">
            <label>Volcano Type:</label>
            <select id="type" name="typeVolcano">
              {{>volcanoTypeSelect}}
            </select>
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="..." >{{volcano.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>